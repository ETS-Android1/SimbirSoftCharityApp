<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fragment_8_dp"
    app:cardCornerRadius="@dimen/fragment_5_dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_4_dp"
        android:layout_marginTop="@dimen/fragment_4_dp"
        android:layout_marginEnd="@dimen/fragment_4_dp">

        <ImageView
            android:id="@+id/news_avatar"
            android:layout_width="@dimen/fragment_0_dp"
            android:layout_height="wrap_content"
            android:foreground="@drawable/fade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/news_1" />

        <TextView
            android:id="@+id/news_title"
            style="@style/text_style_6"
            android:layout_width="@dimen/fragment_0_dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fragment_39_dp"
            android:paddingEnd="@dimen/fragment_38_dp"
            app:layout_constraintTop_toBottomOf="@id/news_avatar"
            app:layout_constraintStart_toStartOf="@+id/news_avatar"
            app:layout_constraintEnd_toEndOf="@+id/news_avatar"
            tools:text="Спонсоры отремонтируют школу-интернат"/>

        <ImageView
            android:id="@+id/decor"
            android:layout_width="@dimen/fragment_0_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_8_dp"
            android:src="@drawable/ic_decor"
            app:layout_constraintStart_toStartOf="@+id/news_avatar"
            app:layout_constraintEnd_toEndOf="@+id/news_avatar"
            app:layout_constraintTop_toBottomOf="@+id/news_title" />

        <TextView
            android:id="@+id/news_descr"
            style="@style/text_style_3"
            android:layout_width="@dimen/fragment_0_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_10_dp"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/fragment_26_dp"
            android:paddingEnd="@dimen/fragment_26_dp"
            app:layout_constraintStart_toStartOf="@+id/news_avatar"
            app:layout_constraintEnd_toEndOf="@+id/news_avatar"
            app:layout_constraintTop_toBottomOf="@id/decor"
            tools:text="Дубовская школа-интернат для детей
                с ограниченными возможностями здоровья стала первой в области …" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/fragment_0_dp"
            android:layout_height="@dimen/fragment_32_dp"
            android:layout_marginTop="@dimen/fragment_16_dp"
            android:background="@color/turtle_green"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/news_avatar"
            app:layout_constraintEnd_toEndOf="@+id/news_avatar"
            app:layout_constraintTop_toBottomOf="@id/news_descr">

            <ImageView
                android:id="@+id/icon_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_today_24" />

            <TextView
                android:id="@+id/date_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_20_dp"
                style="@style/data_style_text"
                tools:text="Октябрь 20, 2021"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>