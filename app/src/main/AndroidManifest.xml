        <activity android:name=".MainActivity"
            android:exported="true">

            <nav-graph android:value="@navigation/app_nav_graph"/>

            <nav-graph android:value="@navigation/nav_graph_main"/>

                <intent-filter>

                    <action android:name="android.intent.action.MAIN" />

